{{#if useSwagger}}
import swagger from '@elysiajs/swagger';
{{/if}}
import { Elysia } from 'elysia';
import { routes } from './routes';

const app = new Elysia()
    {{#if useSwagger}}
    .use(
        swagger({
            documentation: {
                info: {
                    title: 'REST API',
                    description: 'Elysia REST API With Swagger for documentation',
                    version: '1.0.0',
                },
            },
            path: '/api/documentation',
        })
    )
    {{/if}}
    .use(routes)
    .listen(3000);

